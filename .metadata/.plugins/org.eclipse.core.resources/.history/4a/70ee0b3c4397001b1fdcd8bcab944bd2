# 유니버셜 함수
import numpy as np

x = np.arange(4)
print(x)
print(x + 3, " = ", x % 3)
print(np.add(x, 3), "--", np.mod(x, 3))
print()

np.random.seed(0)
a = np.random.randint(1, 10, 10)
b = np.random.randint(1, 10, 10)

mask = np.greater(a, b)
print(a, " - ", b)
print(mask)
