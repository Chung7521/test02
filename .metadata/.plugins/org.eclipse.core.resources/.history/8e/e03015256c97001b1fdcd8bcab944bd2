#데이터 합치기(병합)
import pandas as pd

df1 = pd.DataFrame({"사번": [1001, 1002, 1003, 1004, 1005],
 "이름": ["홍길동", "이순신", "강감찬", "김유신", "어머나"],
 "부서": ["경리부", "전산부", "총무부", "경리부", "총무부"]})
df2 = pd.DataFrame({"사번": [1002, 1003, 1001, 1005, 1004],
 "입사일": ["2012-05-21", "2015-10-23", "2013-11-10", "2010-03-03", "2014-01-09"]})
df3 = pd.merge(df1, df2)
print(df3)
print()

df4 = pd.DataFrame({"부서":["경리부", "전산부", "총무부"],
                    "관리자":["어머나", "이순신", "강감찬"]})
df5 = pd.merge(df3, df4)
print(df5)